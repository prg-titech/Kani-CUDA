package Expression;

public class Arith extends AExpression{
	String op;
	Expression exp1;
	Expression exp2;
	
	public Arith(String op, Expression exp1, Expression exp2) {
		super();
		this.op = op;
		this.exp1 = exp1;
		this.exp2 = exp2;
	}
	
	public String toStringExp(){
		return "(" + this.exp1.toStringExp() + op + this.exp2.toStringExp() + ")";
	}
	
	public int eval(Environment env){
		if(op == "+"){
			return this.exp1.eval(env) + this.exp2.eval(env);
		}else if(op == "-"){
			return this.exp1.eval(env) - this.exp2.eval(env);
		}else{
			return 0;
		}
	}
}
